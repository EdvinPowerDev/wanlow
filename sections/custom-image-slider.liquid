<section class="image-slider-section">
  <div class="container">
    <h1>Join Our Community!</h1>
    <div class="swiper-wrap">
      
      <div class="swiper image-swiper">
        <div class="swiper-wrapper image-swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide image-swiper-slide">
              <img
                src="{{ block.settings.image | image_url }}"
                alt=""
                width="100%"
                height="338" />
            </div>
          {% endfor %}
        </div>


      </div>
      <button id="prevBtn" class="swiper-button-prev arrow-button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="38"
          height="38"
          viewBox="0 0 38 38">
          <g
            id="Component_16_6"
            data-name="Component 16 – 6"
            transform="translate(38 38) rotate(180)">
          <rect
            id="Rectangle_63"
            data-name="Rectangle 63"
            width="38"
            height="38"
            rx="3"
            fill="#fff" />
          <g
            id="Icon_feather-arrow-right"
            data-name="Icon feather-arrow-right"
            transform="translate(2.794 2.602)">
            <path
              id="Path_67"
              data-name="Path 67"
              d="M7.5,18H23.206"
              transform="translate(0 -1.576)"
              fill="none"
              stroke="#483729"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1" />
            <path
              id="Path_68"
              data-name="Path 68"
              d="M18,7.5l6.551,4.974L18,17.449"
              transform="translate(-0.345 3.949)"
              fill="none"
              stroke="#483729"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1" />
          </g>
        </g>
      </svg>
    </button>
    <button id="nextBtn" class="swiper-button-next arrow-button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="38"
        height="38"
        viewBox="0 0 38 38">
        <g
          id="Component_16_6"
          data-name="Component 16 – 6"
          transform="">
        <rect
          id="Rectangle_63"
          data-name="Rectangle 63"
          width="38"
          height="38"
          rx="3"
          fill="#fff" />
        <g
          id="Icon_feather-arrow-right"
          data-name="Icon feather-arrow-right"
          transform="translate(2.794 2.602)">
          <path
            id="Path_67"
            data-name="Path 67"
            d="M7.5,18H23.206"
            transform="translate(0 -1.576)"
            fill="none"
            stroke="#483729"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1" />
          <path
            id="Path_68"
            data-name="Path 68"
            d="M18,7.5l6.551,4.974L18,17.449"
            transform="translate(-0.345 3.949)"
            fill="none"
            stroke="#483729"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1" />
        </g>
      </g>
    </svg>
  </button>
    </div>
    
  </div>
</section>

<script type="module">
  const swiper = new Swiper(".image-swiper", {
  loop: true,
  slidesPerView: 1,
  spaceBetween: 15,
  navigation: {
    nextEl: ".swiper-button-next", 
    prevEl: ".swiper-button-prev", 
  },
  breakpoints: {
    320: {  // Mobile devices
      slidesPerView: 2,
      spaceBetween: 10
    },
    768: {  // Tablets
      slidesPerView: 3,
      spaceBetween: 10
    },
    1200: { // Small desktops
      slidesPerView: 4,
      spaceBetween: 15
    },
  }
});
