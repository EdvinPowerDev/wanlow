<section class="hero-section">
  <div class="hero-content">
    <h1 style="color: {{ section.settings.text-color }};">{{ section.settings.heading }}</h1>
    <p style="color: {{ section.settings.text-color }};">
      {{ section.settings.description }}
    </p>

    {% render 'custom-button'
      , button_text: section.settings.button-text %}

  </div>
</section>

{% style %}
  .hero-section::before,
  .hero-section::after {
    content: "";
    position: absolute;
    top: 0;
    width: 50%;
    height: 100%;
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center center !important;
    z-index: -1;
  }

  .hero-section::before {
    left: 0;
    background: url('{% if section.settings.left_image != blank %} {{ section.settings.left_image | image_url: width: 1500 }} {% else %} {{ "hero-image-left.png" | asset_url }} {% endif %}');
  }

  .hero-section::after {
    right: 0;
    background: url('{% if section.settings.right_image != blank %} {{ section.settings.right_image | image_url: width: 1500 }} {% else %} {{ "hero-image-right.png" | asset_url }} {% endif %}');
  }
  @media only screen and (min-width: 992px) {
    .hero-section::before,
    .hero-section::after {}
}
{% endstyle %}

{% schema %}
  {
    "name": "Hero Section",
    "class": "custom-hero-section-class",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get Outside!"
      },
      {
        "type": "color",
        "id": "text-color",
        "label": "Text Color",
        "default": "#000000"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Monthly subscription box designed to get kids excited to spend more time outdoors and less time inside with their digital devices!"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Get Started"
      }, {
        "type": "image_picker",
        "id": "left_image",
        "label": "Left Image"
      }, {
        "type": "image_picker",
        "id": "right_image",
        "label": "Right Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Hero Section"
      }
    ]
  }
{% endschema %}